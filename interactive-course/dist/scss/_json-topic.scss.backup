// JSON Topic Styles

.json-topic {
  .hero {
    background: linear-gradient(135deg, #2196f3 0%, #21cbf3 100%);
    color: #fff;
    
    .hero-content {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: space-between;
      padding: 2em 0;
      
      .hero-text {
        max-width: 600px;
        
        h1 {
          font-size: 2.5rem;
          margin-bottom: 0.5em;
          
          i {
            color: #ffeb3b;
          }
        }
        
        .hero-description {
          font-size: 1.2rem;
          opacity: 0.9;
          margin-bottom: 1.5em;
        }
        
        .hero-features {
          display: flex;
          flex-wrap: wrap;
          gap: 0.5em;
          
          .feature-tag {
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 0.4em 1em;
            font-size: 0.95em;
            border: 1px solid rgba(255, 255, 255, 0.3);
            
            i {
              margin-right: 0.5em;
              color: #ffeb3b;
            }
          }
        }
      }
      
      .hero-visual {
        .json-showcase {
          background: rgba(255, 255, 255, 0.1);
          backdrop-filter: blur(20px);
          border-radius: 15px;
          padding: 1.5em;
          border: 1px solid rgba(255, 255, 255, 0.2);
          min-width: 350px;
          
          .json-demo {
            margin-bottom: 1.5em;
            
            .pattern-title {
              font-weight: 600;
              color: #ffeb3b;
              margin-bottom: 0.8em;
              font-size: 1.1em;
            }
            
            .pattern-code {
              background: rgba(0, 0, 0, 0.3);
              border-radius: 8px;
              padding: 1em;
              font-family: 'JetBrains Mono', monospace;
              font-size: 0.9em;
              margin-bottom: 0.8em;
              
              .code-line {
                margin-bottom: 0.3em;
                color: #e1f5fe;
              }
            }
            
            .pattern-description {
              color: #e1f5fe;
              font-size: 0.95em;
              opacity: 0.8;
            }
          }
          
          .json-benefits {
            h3 {
              color: #ffeb3b;
              font-size: 1.1em;
              margin-bottom: 0.8em;
            }
            
            .benefits-list {
              .benefit-item {
                background: rgba(255, 235, 59, 0.1);
                border-left: 3px solid #ffeb3b;
                padding: 0.6em 1em;
                margin-bottom: 0.5em;
                border-radius: 0 8px 8px 0;
                color: #e1f5fe;
                font-size: 0.95em;
              }
            }
          }
        }
      }
    }
  }
  
  .main-content {
    .content-section {
      margin-bottom: 3em;
      
      h2 {
        color: #2196f3;
        font-size: 2em;
        margin-bottom: 1em;
        display: flex;
        align-items: center;
        
        i {
          margin-right: 0.5em;
          color: #21cbf3;
        }
      }
      
      .section-content {
        .lead {
          font-size: 1.15em;
          color: #555;
          margin-bottom: 1.5em;
          line-height: 1.6;
        }
        
        .json-intro-grid {
          display: grid;
          grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
          gap: 1.5em;
          margin-bottom: 2em;
          
          .intro-card {
            background: linear-gradient(135deg, #f5f9ff 0%, #e3f2fd 100%);
            border-radius: 12px;
            padding: 1.5em;
            box-shadow: 0 4px 15px rgba(33, 150, 243, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            
            &:hover {
              transform: translateY(-5px);
              box-shadow: 0 8px 25px rgba(33, 150, 243, 0.15);
            }
            
            .intro-icon {
              font-size: 2.5em;
              color: #2196f3;
              margin-bottom: 0.5em;
            }
            
            h4 {
              color: #333;
              margin-bottom: 0.5em;
              font-size: 1.2em;
            }
            
            p {
              color: #666;
              margin-bottom: 1em;
              line-height: 1.5;
            }
            
            .code-example {
              background: rgba(255, 255, 255, 0.8);
              border-radius: 6px;
              padding: 1em;
              font-family: 'JetBrains Mono', monospace;
              font-size: 0.9em;
              overflow-x: auto;
            }
          }
        }
        
        .syntax-explanation {
          background: #f5f9ff;
          border-radius: 12px;
          padding: 2em;
          margin-bottom: 2em;
          border: 1px solid #e3f2fd;
          
          .syntax-rules {
            margin-top: 1.5em;
            
            h4 {
              color: #2196f3;
              margin-bottom: 1em;
            }
            
            .rules-list {
              list-style: none;
              padding: 0;
              
              li {
                background: #fff;
                border-radius: 6px;
                padding: 0.8em 1.2em;
                margin-bottom: 0.5em;
                border-left: 4px solid #2196f3;
                box-shadow: 0 1px 3px rgba(33, 150, 243, 0.1);
                
                &:before {
                  content: 'âœ“';
                  color: #4caf50;
                  font-weight: bold;
                  margin-right: 0.8em;
                }
              }
            }
          }
        }
        
        .data-types-demo {
          margin-bottom: 2em;
          
          h4 {
            color: #2196f3;
            margin-bottom: 1.5em;
            
            i {
              color: #21cbf3;
              margin-right: 0.5em;
            }
          }
          
          .data-types-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5em;
            
            .data-type-card {
              background: #fff;
              border-radius: 10px;
              padding: 1.5em;
              box-shadow: 0 4px 15px rgba(33, 150, 243, 0.1);
              border: 2px solid #f0f8ff;
              transition: border-color 0.3s ease, box-shadow 0.3s ease;
              
              &:hover {
                border-color: #2196f3;
                box-shadow: 0 6px 20px rgba(33, 150, 243, 0.15);
              }
              
              h5 {
                color: #2196f3;
                margin-bottom: 1em;
                font-size: 1.2em;
                display: flex;
                align-items: center;
                
                &:before {
                  content: '{}';
                  background: #2196f3;
                  color: #fff;
                  border-radius: 50%;
                  width: 30px;
                  height: 30px;
                  display: flex;
                  align-items: center;
                  justify-content: center;
                  margin-right: 0.8em;
                  font-size: 0.8em;
                  font-family: 'JetBrains Mono', monospace;
                }
              }
              
              .code-example {
                background: #f8fbff;
                border-radius: 6px;
                padding: 1em;
                margin-bottom: 1em;
                font-family: 'JetBrains Mono', monospace;
                font-size: 0.9em;
                overflow-x: auto;
              }
              
              p {
                color: #666;
                margin: 0;
                font-size: 0.95em;
              }
            }
          }
        }
        
        .json-validator {
          background: #f5f9ff;
          border-radius: 12px;
          padding: 2em;
          border: 1px solid #e3f2fd;
          
          h4 {
            color: #2196f3;
            margin-bottom: 1.5em;
            
            i {
              color: #4caf50;
              margin-right: 0.5em;
            }
          }
          
          .validator-container {
            .validator-input {
              margin-bottom: 1.5em;
              
              label {
                display: block;
                font-weight: 500;
                color: #333;
                margin-bottom: 0.5em;
              }
              
              textarea {
                width: 100%;
                min-height: 200px;
                border: 2px solid #e3f2fd;
                border-radius: 8px;
                padding: 1em;
                font-family: 'JetBrains Mono', monospace;
                font-size: 0.9em;
                resize: vertical;
                transition: border-color 0.3s ease;
                
                &:focus {
                  outline: none;
                  border-color: #2196f3;
                }
              }
            }
            
            .validator-controls {
              display: flex;
              gap: 1em;
              margin-bottom: 1.5em;
              flex-wrap: wrap;
              
              .btn {
                padding: 0.6em 1.2em;
                border: none;
                border-radius: 6px;
                cursor: pointer;
                font-size: 1em;
                font-weight: 500;
                transition: all 0.3s ease;
                
                &.btn-primary {
                  background: #2196f3;
                  color: #fff;
                  
                  &:hover {
                    background: #1976d2;
                  }
                }
                
                &.btn-secondary {
                  background: #f5f5f5;
                  color: #333;
                  border: 1px solid #ddd;
                  
                  &:hover {
                    background: #e0e0e0;
                  }
                }
              }
            }
            
            .validator-result {
              .result-display {
                background: #fff;
                border-radius: 8px;
                padding: 1.5em;
                border: 2px solid #f0f0f0;
                
                .validation-success {
                  h6 {
                    color: #4caf50;
                    margin-bottom: 0.5em;
                    font-size: 1.1em;
                  }
                  
                  p {
                    color: #666;
                    margin: 0;
                  }
                }
                
                .validation-error {
                  h6 {
                    color: #f44336;
                    margin-bottom: 0.5em;
                    font-size: 1.1em;
                  }
                  
                  p {
                    color: #666;
                    margin-bottom: 0.5em;
                    
                    &:last-child {
                      margin-bottom: 0;
                    }
                    
                    strong {
                      color: #333;
                    }
                  }
                }
              }
            }
          }
        }
        
        .methods-grid {
          display: grid;
          grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
          gap: 1.5em;
          margin-bottom: 2em;
          
          .method-card {
            background: #fff;
            border-radius: 12px;
            padding: 1.5em;
            box-shadow: 0 4px 15px rgba(33, 150, 243, 0.1);
            border: 2px solid #f0f8ff;
            
            .method-header {
              margin-bottom: 1em;
              
              h4 {
                color: #2196f3;
                margin-bottom: 0.3em;
                font-size: 1.3em;
              }
              
              .return-type {
                background: #e3f2fd;
                color: #1976d2;
                padding: 0.3em 0.8em;
                border-radius: 4px;
                font-size: 0.8em;
                font-weight: 500;
              }
            }
            
            .method-description {
              color: #666;
              margin-bottom: 1.2em;
              line-height: 1.5;
            }
            
            .code-example {
              background: #f8fbff;
              border-radius: 6px;
              padding: 1em;
              margin-bottom: 1.2em;
              font-family: 'JetBrains Mono', monospace;
              font-size: 0.9em;
              overflow-x: auto;
            }
            
            .method-demo {
              background: #f5f9ff;
              border-radius: 8px;
              padding: 1em;
              
              label {
                display: block;
                font-weight: 500;
                color: #333;
                margin-bottom: 0.5em;
                font-size: 0.9em;
              }
              
              .demo-input {
                width: 100%;
                padding: 0.5em;
                border: 1px solid #ddd;
                border-radius: 4px;
                font-family: 'JetBrains Mono', monospace;
                font-size: 0.9em;
                margin-bottom: 0.8em;
              }
              
              .demo-btn {
                background: #2196f3;
                color: #fff;
                border: none;
                padding: 0.5em 1em;
                border-radius: 4px;
                cursor: pointer;
                font-size: 0.9em;
                margin-bottom: 1em;
                
                &:hover {
                  background: #1976d2;
                }
              }
              
              .demo-result {
                background: #fff;
                border-radius: 4px;
                padding: 0.8em;
                border: 1px solid #e0e0e0;
                font-size: 0.9em;
                
                .demo-success {
                  color: #4caf50;
                  
                  strong {
                    color: #2e7d32;
                  }
                  
                  code, pre {
                    background: #f1f8e9;
                    padding: 0.3em;
                    border-radius: 3px;
                    font-family: 'JetBrains Mono', monospace;
                    color: #33691e;
                  }
                }
                
                .demo-error {
                  color: #f44336;
                  
                  strong {
                    color: #c62828;
                  }
                }
              }
            }
          }
        }
        
        .use-cases-grid {
          display: grid;
          grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
          gap: 1.5em;
          margin-bottom: 2em;
          
          .use-case-card {
            background: linear-gradient(135f, #f5f9ff 0%, #e3f2fd 100%);
            border-radius: 12px;
            padding: 1.5em;
            box-shadow: 0 4px 15px rgba(33, 150, 243, 0.1);
            transition: transform 0.3s ease;
            
            &:hover {
              transform: translateY(-5px);
            }
            
            .use-case-icon {
              font-size: 2.5em;
              color: #2196f3;
              margin-bottom: 1em;
            }
            
            h4 {
              color: #333;
              margin-bottom: 0.8em;
              font-size: 1.2em;
            }
            
            p {
              color: #666;
              margin-bottom: 1.2em;
              line-height: 1.5;
            }
            
            .code-example {
              background: rgba(255, 255, 255, 0.8);
              border-radius: 6px;
              padding: 1em;
              font-family: 'JetBrains Mono', monospace;
              font-size: 0.9em;
              overflow-x: auto;
            }
          }
        }
        
        .interactive-demo {
          background: #f5f9ff;
          border-radius: 12px;
          padding: 2em;
          border: 1px solid #e3f2fd;
          
          h4 {
            color: #2196f3;
            margin-bottom: 1.5em;
            
            i {
              color: #21cbf3;
              margin-right: 0.5em;
            }
          }
          
          .demo-container {
            .demo-tabs {
              display: flex;
              margin-bottom: 1.5em;
              border-bottom: 2px solid #e3f2fd;
              
              .tab-btn {
                background: none;
                border: none;
                padding: 0.8em 1.5em;
                font-size: 1em;
                cursor: pointer;
                color: #666;
                border-bottom: 2px solid transparent;
                transition: all 0.3s ease;
                
                &.active {
                  color: #2196f3;
                  border-bottom-color: #2196f3;
                  font-weight: 600;
                }
                
                &:hover:not(.active) {
                  color: #333;
                }
              }
            }
            
            .tab-panel {
              display: none;
              
              &.active {
                display: block;
              }
              
              .demo-section {
                background: #fff;
                border-radius: 8px;
                padding: 1.5em;
                
                h5 {
                  color: #2196f3;
                  margin-bottom: 1em;
                }
                
                .form-group {
                  margin-bottom: 1.5em;
                  
                  label {
                    display: block;
                    font-weight: 500;
                    color: #333;
                    margin-bottom: 0.5em;
                  }
                  
                  input, select, textarea {
                    width: 100%;
                    padding: 0.6em;
                    border: 1px solid #ddd;
                    border-radius: 4px;
                    font-size: 1em;
                    margin-bottom: 0.8em;
                    
                    &:focus {
                      outline: none;
                      border-color: #2196f3;
                    }
                  }
                  
                  input[type="checkbox"] {
                    width: auto;
                    margin-right: 0.5em;
                  }
                }
                
                .demo-actions {
                  display: flex;
                  gap: 1em;
                  flex-wrap: wrap;
                  margin-bottom: 1.5em;
                  
                  .btn {
                    padding: 0.6em 1.2em;
                    border: none;
                    border-radius: 6px;
                    cursor: pointer;
                    font-size: 1em;
                    font-weight: 500;
                    transition: all 0.3s ease;
                    
                    &.btn-primary {
                      background: #2196f3;
                      color: #fff;
                      
                      &:hover {
                        background: #1976d2;
                      }
                    }
                    
                    &.btn-secondary {
                      background: #f5f5f5;
                      color: #333;
                      border: 1px solid #ddd;
                      
                      &:hover {
                        background: #e0e0e0;
                      }
                    }
                    
                    &.btn-danger {
                      background: #f44336;
                      color: #fff;
                      
                      &:hover {
                        background: #d32f2f;
                      }
                    }
                  }
                }
                
                .demo-result {
                  background: #f8fbff;
                  border-radius: 8px;
                  padding: 1.5em;
                  border: 1px solid #e3f2fd;
                  
                  .loading {
                    color: #2196f3;
                    text-align: center;
                    font-style: italic;
                  }
                  
                  .demo-success {
                    h6 {
                      color: #4caf50;
                      margin-bottom: 1em;
                    }
                    
                    pre, code {
                      background: #f1f8e9;
                      padding: 0.8em;
                      border-radius: 4px;
                      font-family: 'JetBrains Mono', monospace;
                      font-size: 0.9em;
                      color: #33691e;
                      overflow-x: auto;
                    }
                  }
                  
                  .demo-error {
                    h6 {
                      color: #f44336;
                      margin-bottom: 1em;
                    }
                    
                    p {
                      color: #666;
                      margin-bottom: 0.5em;
                      
                      strong {
                        color: #333;
                      }
                    }
                  }
                  
                  .demo-info {
                    h6 {
                      color: #2196f3;
                      margin-bottom: 1em;
                    }
                    
                    p {
                      color: #666;
                      margin: 0;
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
    
    .quiz-section {
      background: linear-gradient(135deg, #2196f3 0%, #21cbf3 100%);
      color: #fff;
      border-radius: 15px;
      padding: 2em;
      margin-bottom: 3em;
      
      h2 {
        color: #fff;
        margin-bottom: 1.5em;
        
        i {
          color: #ffeb3b;
          margin-right: 0.5em;
        }
      }
      
      .quiz-container {
        .quiz-question {
          background: rgba(255, 255, 255, 0.1);
          backdrop-filter: blur(10px);
          border-radius: 10px;
          padding: 1.5em;
          margin-bottom: 1.5em;
          border: 1px solid rgba(255, 255, 255, 0.2);
          
          h4 {
            margin-bottom: 1em;
            
            .question-number {
              background: #ffeb3b;
              color: #333;
              width: 30px;
              height: 30px;
              border-radius: 50%;
              display: inline-flex;
              align-items: center;
              justify-content: center;
              margin-right: 0.8em;
              font-weight: 600;
            }
            
            code {
              background: rgba(0, 0, 0, 0.3);
              padding: 0.2em 0.5em;
              border-radius: 4px;
              font-family: 'JetBrains Mono', monospace;
            }
          }
          
          .quiz-options {
            list-style: none;
            padding: 0;
            
            li {
              margin-bottom: 0.8em;
              
              label {
                display: flex;
                align-items: center;
                cursor: pointer;
                padding: 0.5em;
                border-radius: 6px;
                transition: background 0.3s ease;
                
                &:hover {
                  background: rgba(255, 255, 255, 0.1);
                }
                
                input[type="radio"] {
                  margin-right: 0.8em;
                }
                
                span {
                  flex: 1;
                  font-family: 'JetBrains Mono', monospace;
                  font-size: 0.9em;
                }
              }
            }
          }
        }
        
        .quiz-actions {
          text-align: center;
          margin-top: 2em;
          
          .btn {
            padding: 0.8em 2em;
            border: none;
            border-radius: 8px;
            font-size: 1.1em;
            cursor: pointer;
            margin: 0 0.5em;
            transition: all 0.3s ease;
            
            &.btn-primary {
              background: #ffeb3b;
              color: #333;
              font-weight: 600;
              
              &:hover {
                background: #fdd835;
                transform: translateY(-2px);
              }
            }
            
            &.btn-secondary {
              background: rgba(255, 255, 255, 0.2);
              color: #fff;
              border: 1px solid rgba(255, 255, 255, 0.3);
              
              &:hover {
                background: rgba(255, 255, 255, 0.3);
              }
            }
          }
        }
        
        .quiz-results {
          background: rgba(255, 235, 59, 0.2);
          border: 2px solid #ffeb3b;
          border-radius: 10px;
          padding: 1.5em;
          margin-top: 1.5em;
          text-align: center;
          
          h3 {
            color: #ffeb3b;
            margin-bottom: 0.5em;
            
            i {
              margin-right: 0.5em;
            }
          }
          
          p {
            font-size: 1.1em;
            margin: 0;
            
            span {
              font-weight: 600;
              color: #ffeb3b;
            }
          }
        }
      }
    }
    
    .resources-section {
      .resource-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5em;
        
        .resource-card {
          background: #fff;
          border-radius: 12px;
          padding: 1.5em;
          box-shadow: 0 4px 15px rgba(33, 150, 243, 0.1);
          border: 1px solid #f0f0f0;
          transition: transform 0.3s ease, box-shadow 0.3s ease;
          
          &:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(33, 150, 243, 0.15);
          }
          
          .resource-icon {
            font-size: 2.5em;
            color: #2196f3;
            margin-bottom: 1em;
          }
          
          .resource-content {
            h4 {
              color: #333;
              margin-bottom: 0.5em;
            }
            
            p {
              color: #666;
              margin-bottom: 1em;
              line-height: 1.5;
            }
            
            .resource-link {
              color: #2196f3;
              text-decoration: none;
              font-weight: 500;
              transition: color 0.3s ease;
              
              &:hover {
                color: #1976d2;
              }
              
              i {
                margin-right: 0.5em;
              }
            }
          }
        }
      }
    }
    
    .next-steps {
      background: #f5f9ff;
      border-radius: 15px;
      padding: 2em;
      border: 1px solid #e3f2fd;
      
      h2 {
        color: #2196f3;
        margin-bottom: 1.5em;
        text-align: center;
        
        i {
          color: #21cbf3;
          margin-right: 0.5em;
        }
      }
      
      .steps-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5em;
        
        .step-card {
          background: #fff;
          border-radius: 12px;
          padding: 1.5em;
          box-shadow: 0 4px 15px rgba(33, 150, 243, 0.1);
          text-align: center;
          transition: transform 0.3s ease;
          
          &:hover {
            transform: translateY(-5px);
          }
          
          .step-number {
            background: #2196f3;
            color: #fff;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2em;
            font-weight: 600;
            margin-bottom: 1em;
          }
          
          .step-content {
            h3 {
              color: #333;
              margin-bottom: 0.5em;
            }
            
            p {
              color: #666;
              margin-bottom: 1em;
              line-height: 1.5;
            }
            
            .next-link {
              color: #2196f3;
              text-decoration: none;
              font-weight: 600;
              padding: 0.5em 1em;
              border: 2px solid #2196f3;
              border-radius: 6px;
              display: inline-block;
              transition: all 0.3s ease;
              
              &:hover {
                background: #2196f3;
                color: #fff;
              }
            }
          }
        }
      }
    }
  }
}

