{
  "intersectionObserver": {
    "threshold": 0.1,
    "rootMargin": "0px 0px -50px 0px"
  },
  "animations": {
    "duration": {
      "fast": 200,
      "normal": 300,
      "slow": 500
    },
    "easing": {
      "default": "ease-in-out",
      "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)",
      "smooth": "cubic-bezier(0.4, 0, 0.2, 1)"
    }
  },
  "quiz": {
    "timeLimit": 300,
    "showExplanations": true,
    "allowRetry": true,
    "randomizeQuestions": false
  },
  "progress": {
    "autoSave": true,
    "saveInterval": 5000,
    "localStoragePrefix": "webtech_"
  },
  "ui": {
    "scrollOffset": 100,
    "mobileBreakpoint": 768,
    "tabletBreakpoint": 1024
  },
  "ajax": {
    "timeout": 10000,
    "retryAttempts": 3,
    "retryDelay": 1000
  },
  "colorPicker": {
    "defaultColors": [
      "#FF0000",
      "#00FF00",
      "#0000FF",
      "#FFFF00",
      "#FF00FF",
      "#00FFFF",
      "#FFA500",
      "#800080"
    ],
    "recentColorsLimit": 8
  },
  "formValidation": {
    "debounceDelay": 300,
    "showErrors": true,
    "errorDisplayDuration": 5000
  }
}
